<h1> Menu form </h1>

<%= form_for @menu do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %><br/>

	<%= f.label :title %>
	<%= f.text_field :title %><br/>

	<%= f.label :description%>
	<%= f.text_field :description %><br/>

	<%= f.label :price %>
	<%= f.text_field :price %><br/>

	<%= f.label :itemtype %>
	<%= f.text_field :item_type %><br/>

	<%= f.label :image %>
	<%= f.file_field :image %>

	<%=f.submit "submit" %>

<% end %>
